<swiper
 indicator-dots="{{true}}"
 autoplay="{{true}}"
 interval="{{5000}}"
 duration="{{500}}"
>
	<block wx:for="{{ swiperURL }}" wx:key="index">
		<swiper-item>
			<van-image
			 src="{{item}}"
			 height="300rpx"
			 width="750rpx"
			 fit="cover"
			 use-loading-slot
			>
				<van-loading
				 slot="loading"
				 type="spinner"
				 size="20"
				 vertical
				/>
			</van-image>
		</swiper-item>
	</block>
</swiper>

<van-cell-group title="我的信息">
	<van-field
	 model:value="{{ name }}"
	 label="称呼"
	 placeholder="请输入您的称呼"
	 error-message="{{ nameErrorMsg }}"
	 bind:change="onNameChange"
	 input-align="right"
	/>
	<van-cell
	 title="毕业年份"
	 value="{{ grade }}"
	 is-link
	 arrow-direction="down"
	 bind:click="toggleChangeGradeShow"
	/>
</van-cell-group>

<view class="generateBtn">
	<van-button
	 round
	 type="primary"
	 block
	 bind:click="generatePoster"
	 color="#7bd462"
	 disabled="{{ !generateEnabled || saved }}"
	>{{!saved?'生成我的证书':'已保存到相册，快去分享到朋友圈吧'}}
	</van-button>
</view>

<van-popup
 show="{{ changeGradeShow }}"
 position="bottom"
 bind:close="toggleChangeGradeShow"
>
	<van-picker columns="{{ grades }}" bind:change="onGradeChange" />
</van-popup>

<poster
 id="poster"
 config="{{posterConfig}}"
 bind:success="onPosterSuccess"
 bind:fail="onPosterFail"
/>

<van-overlay show="{{ posterShow }}">
	<view class="prevWrapper">
		<view class="posterWrapper">
			<van-image
			 src="{{ posterUrl }}"
			 height="495rpx"
			 width="720rpx"
			/>
		</view>
		<van-button
		 round
		 type="primary"
		 block
		 bind:click="savePoster"
		 color="#7bd462"
		 icon="photo-o"
		 loading="{{ savingLoading }}"
		 disabled="{{ savingLoading }}"
		>保存到相册
		</van-button>
	</view>
</van-overlay>

